<div class="container mt-4">
    <h3 class="mt-4">Thêm khóa học mới</h3>
    <form action="/courses/store" method="POST">
        <div class="form-group">
            <label for="name">Tên khóa học</label><br>
            <input class="form-control" type="text" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="teacher">Giảng viên</label><br>
            <input class="form-control" type="text" name="teacher" id="teacher">
        </div>
        <div class="form-group">
            <label for="quantity_video">Số lượng video</label>
            <input class="form-control" type="number" name="quantity_video" id="quantity_video">
        </div>
        <div class="form-group">
            <label for="hourse">Tổng số giờ dự tính</label>
            <input class="form-control" type="number" name="hourse" id="hourse">
        </div>
        <div class="form-group">
            <label for="image">Ảnh minh họa</label><br>
            <input class="form-control" type="text" name="image" id="image">
        </div>
        <div class="form-group">
            <label for="price">Giá</label><br>
            <input class="form-control" type="number" name="price" id="price">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label><br>
            <textarea class="form-control" id="description" name="description" rows="4" cols="50"></textarea>
        </div>
        <button type="submit" class="btn btn-outline-success">Tạo khóa học mới</button>
    </form>
</div>
